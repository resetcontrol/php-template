{
  "printWidth": 80,
  "trailingComma": "none",
  "overrides": [
    {
      "files": "*.md",
      "options": {
        "proseWrap": "always"
      }
    },
    {
      "files": "*.php",
      "options": {
        "plugins": ["@prettier/plugin-php"],
        "parser": "php",
        "phpVersion": "5.3",
        "singleQuote": false,
        "trailingCommaPHP": false,
        "braceStyle": "1tbs"
      }
    },
    {
      "files": "*.js",
      "options": {
        "singleQuote": false
      }
    }
  ]
}
